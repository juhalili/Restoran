@model IEnumerable<Restoran.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-4">
    <!-- Page Title -->
    <h2 class="mb-4 text-dark"><i class="fas fa-receipt"></i> My Orders</h2>

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>Order Date</th>
                    <th>Total Amount</th>
                    <th>Order Items</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                        <td class="text-success fw-bold">@order.TotalAmount.ToString("C")</td>
                        <td>
                            <ul class="list-unstyled">
                                @foreach (var item in order.OrderItems)
                                {
                                    <li>
                                        <i class="fas fa-utensils"></i>
                                        @item.Product.Name - @item.Quantity x
                                        <span class="text-success">@item.Price.ToString("C")</span>
                                    </li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
