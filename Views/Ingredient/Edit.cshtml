@model Ingredient

@{
    ViewBag.Title = $"Edit {Model.Name} Ingredient";
}

<div class="container mt-4">
    <!-- Yellow colored heading -->
    <h1 class="mb-4 text-warning"><i class="fas fa-edit"></i> Edit Ingredient</h1>

    <div class="card shadow-lg p-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="IngredientId" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">Ingredient Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter ingredient name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>
