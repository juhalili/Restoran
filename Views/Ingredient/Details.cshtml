@model Ingredient

@{
    ViewBag.Title = "Ingredient Details";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary"><i class="fas fa-seedling"></i> @Model.Name Details</h1>

    @if (Model.ProductIngredients != null && Model.ProductIngredients.Any())
    {
        <h4 class="text-secondary"><i class="fas fa-box"></i> Products Containing This Ingredient</h4>

        <div class="table-responsive">
            <table class="table table-striped table-bordered mt-3">
                <thead class="table-dark">
                    <tr>
                        <th>Product Name</th>
                        <th>Description</th>
                        <th>Price ($)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var productIngredient in Model.ProductIngredients)
                    {
                        <tr>
                            <td>@productIngredient.Product.Name</td>
                            <td>@productIngredient.Product.Description</td>
                            <td>@productIngredient.Product.Price.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-3" role="alert">
            <i class="fas fa-exclamation-circle"></i> No products contain this ingredient.
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
