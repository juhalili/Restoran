@model Ingredient

@{
    ViewBag.Title = $"Delete {Model.Name} Ingredient";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger"><i class="fas fa-trash-alt"></i> Delete Ingredient</h1>

    <div class="card shadow-lg p-4">
        <h3 class="text-center text-danger">Are you sure you want to delete this ingredient?</h3>

        <div class="text-center mb-4">
            <h4 class="fw-bold">@Model.Name</h4>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="IngredientId" />

            <div class="text-center">
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fas fa-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>
